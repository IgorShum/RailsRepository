<p id="notice"><%= notice %></p>

<h1>ЖД Станции</h1>

<table>
  <thead>
    <tr>
      <th>Названия:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td><%= link_to 'Показ', railway_station %></td>
        <td><%= link_to 'Редакт', edit_railway_station_path(railway_station) %></td>
        <td><%= link_to 'Удалить', railway_station, method: :delete, data: { confirm: 'Удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

