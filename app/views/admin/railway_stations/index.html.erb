<h1>ЖД Станции</h1>

<table>
  <thead>
    <tr>
      <th>Названия:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td>
        <% if railway_station.routes.present? %>
        <% railway_station.routes.each do |route| %>
        <%= route.name %></td>
        <% end %>
        <% else %>
        Станция без маршрутов.
        <% end %>
        <td><%= link_to 'Показ', [:admin, railway_station] %></td>
        <td><%= link_to 'Редакт', edit_admin_railway_station_path(railway_station) %></td>
        <td><%= link_to 'Удалить', [:admin, railway_station] , method: :delete, data: { confirm: 'Удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Добавить станцию', new_admin_railway_station_path %>
